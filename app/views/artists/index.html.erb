<h1>Artists</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th></th>
      <th><%= sort_link "name" %></th>
      <th><%= sort_link "created_at", "Added On" %></th>
    </tr>
  </thead>
  <tbody>
    <% @artists.each do |artist| %>
    <tr>
      <td><%= cl_image_tag(artist.image, :width => 100, :height => 150, :crop => :fill) %></td>
      <td><h2><%= link_to artist.name, artist_path(artist.id) %></h2></td>
      <td><%= artist.created_at.strftime "%B %e, %Y" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
